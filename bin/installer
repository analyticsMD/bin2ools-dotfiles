${BT}/inst/python-pipx



echo -ne "\nALMOST DONE!  Generating AWS Profiles...\n\n"

# Run post-install dotfiles scripts
logn "Executing 'source ${HOME}/.bt/settings':"
${BT}/settings 
autologin "prod-${BT_TEAM}"


